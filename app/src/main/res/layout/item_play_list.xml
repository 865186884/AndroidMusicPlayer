<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/item_play_list_view"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/item_play_list_view2"
        android:layout_width="4dp"
        android:layout_height="80dp"
        android:layout_marginStart="3dp"
        android:background="#FF0000"
        app:layout_constraintBottom_toBottomOf="@+id/item_play_list_view"
        app:layout_constraintStart_toStartOf="@+id/item_play_list_view"
        app:layout_constraintTop_toTopOf="@+id/item_play_list_view" />

    <ImageView
        android:id="@+id/item_play_list_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_play_list_view"
        app:layout_constraintStart_toStartOf="@+id/item_play_list_view"
        app:layout_constraintTop_toTopOf="@+id/item_play_list_view"
        app:srcCompat="@drawable/play_page_default_cover" />

    <TextView
        android:id="@+id/item_play_list_music_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:text="歌名"
        android:textSize="23sp"
        app:layout_constraintStart_toEndOf="@+id/item_play_list_image"
        app:layout_constraintTop_toTopOf="@+id/item_play_list_view" />

    <TextView
        android:id="@+id/item_play_list_author_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="作者"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/item_play_list_image"
        app:layout_constraintTop_toBottomOf="@+id/item_play_list_music_name" />
</androidx.constraintlayout.widget.ConstraintLayout>